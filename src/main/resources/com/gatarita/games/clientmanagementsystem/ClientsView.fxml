<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gatarita.games.clientmanagementsystem.ClientsController">
    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>

    <HBox spacing="10" style="-fx-border-color: #cccccc; -fx-border-width: 0 0 1 0;">
        <padding>
            <Insets bottom="5" left="5" right="5" top="5" />
        </padding>
        <Button onAction="#handleNewClient" style="-fx-padding: 5 15 5 15; -fx-font-weight: bold;" text="NEW" />
        <Button onAction="#handleEditClient" style="-fx-padding: 5 15 5 15;" text="EDIT" />
        <Button onAction="#handleDeleteClient" style="-fx-padding: 5 15 5 15;" text="DELETE" />
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchField" prefWidth="250" promptText="Search clients..." style="-fx-padding: 5 10 5 10;" />
    </HBox>

    <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
        <TableView fx:id="clientTable">
            <columns>
                <TableColumn fx:id="nameCol" text="NAME" />
                <TableColumn fx:id="companyCol" text="COMPANY" />
                <TableColumn fx:id="jobCol" text="JOB" />
                <TableColumn fx:id="emailCol" text="EMAIL" />
                <TableColumn fx:id="mobileCol" text="MOBILE" />
                <TableColumn fx:id="tagsCol" text="NOTES" />
            </columns>
        </TableView>
    </ScrollPane>
</VBox>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="700.0" spacing="10" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gatarita.games.clientmanagementsystem.ProjectsController">
    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>

    <HBox fx:id="toolbar" spacing="10" style="-fx-border-color: #cccccc; -fx-border-width: 0 0 1 0;">
        <padding>
            <Insets bottom="5" left="5" right="5" top="5" />
        </padding>
        <Button onAction="#handleNewProject" style="-fx-padding: 5 15 5 15; -fx-font-weight: bold;" text="NEW" />
        <Button onAction="#handleEditProject" style="-fx-padding: 5 15 5 15;" text="EDIT" />
        <Button onAction="#handleDeleteProject" style="-fx-padding: 5 15 5 15;" text="DELETE" />
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchField" prefWidth="250" promptText="Search projects..." style="-fx-padding: 5 10 5 10;" />
    </HBox>

    <ScrollPane fitToWidth="true" VBox.vgrow="NEVER">
        <VBox prefWidth="233.0" spacing="15" style="-fx-padding: 10;">

            <VBox spacing="5" style="-fx-border-color: #666666; -fx-border-width: 2; -fx-padding: 10; -fx-background-color: #fafafa;" VBox.vgrow="ALWAYS">
                <Label style="-fx-font-weight: bold; -fx-font-size: 12;" text="NOT STARTED" />
                <TableView fx:id="pendingTable" minHeight="-Infinity" prefHeight="128.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn prefWidth="150" text="PROJECT" />
                        <TableColumn prefWidth="100" text="AMOUNT" />
                        <TableColumn prefWidth="100" text="DUE ON" />
                        <TableColumn prefWidth="100" text="STARTED" />
                        <TableColumn prefWidth="150" text="CLIENTS" />
                        <TableColumn prefWidth="100" text="STATUS" />
                    </columns>
                </TableView>
            </VBox>

            <VBox spacing="5" style="-fx-border-color: #0066cc; -fx-border-width: 2; -fx-padding: 10; -fx-background-color: #f0f7ff;" VBox.vgrow="ALWAYS">
                <Label style="-fx-font-weight: bold; -fx-font-size: 12; -fx-text-fill: #0066cc;" text="IN PROGRESS" />

                <TableView fx:id="ongoingTable" minHeight="-Infinity" prefHeight="128.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn prefWidth="150" text="PROJECT" />
                        <TableColumn prefWidth="100" text="AMOUNT" />
                        <TableColumn prefWidth="100" text="DUE ON" />
                        <TableColumn prefWidth="100" text="STARTED" />
                        <TableColumn prefWidth="150" text="CLIENTS" />
                        <TableColumn prefWidth="100" text="STATUS" />
                    </columns>
                </TableView>
            </VBox>

            <VBox spacing="5" style="-fx-border-color: #009900; -fx-border-width: 2; -fx-padding: 10; -fx-background-color: #f0fff0;" VBox.vgrow="ALWAYS">
                <Label style="-fx-font-weight: bold; -fx-font-size: 12; -fx-text-fill: #009900;" text="COMPLETED" />

                <TableView fx:id="completedTable" minHeight="-Infinity" prefHeight="128.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn prefWidth="150" text="PROJECT" />
                        <TableColumn prefWidth="100" text="AMOUNT" />
                        <TableColumn prefWidth="100" text="DUE ON" />
                        <TableColumn prefWidth="100" text="STARTED" />
                        <TableColumn prefWidth="150" text="CLIENTS" />
                        <TableColumn prefWidth="100" text="STATUS" />
                    </columns>
                </TableView>
            </VBox>

            <VBox spacing="5" style="-fx-border-color: #cc0000; -fx-border-width: 2; -fx-padding: 10; -fx-background-color: #fff5f5;" VBox.vgrow="ALWAYS">
                <Label style="-fx-font-weight: bold; -fx-font-size: 12; -fx-text-fill: #cc0000;" text="CANCELLED" />

                <TableView fx:id="cancelledTable" minHeight="-Infinity" prefHeight="128.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn prefWidth="150" text="PROJECT" />
                        <TableColumn prefWidth="100" text="AMOUNT" />
                        <TableColumn prefWidth="100" text="DUE ON" />
                        <TableColumn prefWidth="100" text="STARTED" />
                        <TableColumn prefWidth="150" text="CLIENTS" />
                        <TableColumn prefWidth="100" text="STATUS" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </ScrollPane>
</VBox>
